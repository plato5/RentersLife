@model RentersLife.ViewModels.AccountViewModel;

<div class="div-center">
    <div class="content">
        <h3>Register</h3>
        <hr />
        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="UserName">User Name:</label>
                <input class="form-control" type="text" placeholder="User Name" asp-for="UserName">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input class="form-control" type="text" placeholder="Password" asp-for="Password">
            </div>
            <div class="form-group">
                <label asp-for="Email">email:</label>
                <input class="form-control" type="text" placeholder="Email" asp-for="Email">
            </div>
            <input type="submit" class="btn btn-dark" value="Register">
        </form>
    </div>
</div>