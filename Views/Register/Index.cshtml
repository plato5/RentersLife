@model RentersLife.ViewModels.RegistrationViewModel;

<div class="center">
    <div class="content">
        <h3>Register</h3>
        <hr />
        <form asp-action="Register" name="userRegistrationForm">
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input id="Email" name="Email" class="form-control" type="text" placeholder="Email" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input id="Password" name="Password" class="form-control" type="text" placeholder="Password" asp-for="Password">
            </div>
             <div class="form-group">
                <label asp-for="FirstName">First Name:</label>
                <input id="FirstName" name="FirstName" class="form-control" type="text" placeholder="First Name" asp-for="FirstName">
            </div>
            <div class="form-group">
                <label asp-for="MiddleName">Middle Name:</label>
                <input class="form-control" type="text" placeholder="Middle Name" asp-for="MiddleName">
            </div>
             <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <input id="LastName" name="LastName" class="form-control" type="text" placeholder="Last Name" asp-for="LastName">
            </div>
            <input type="submit" class="btn btn-primary btn-outline-light" value="Register">
        </form>
    </div>
</div>


@section scripts {    
    <script>    
        $(document).ready(function() {
          $("form[name='userRegistrationForm']").validate({
              rules: {                                 
                  Email: {
                      required: true,
                      email: true
                  },
                  Password: {
                      required: true,
                      minlength: 5
                  },
                  FirstName: {
                      required: true
                  },
                  LastName: {
                      required: true
                  }
              },
              messages: {
                  Password: {
                      required: "Please provide a password",
                      minlength: "Password must be at least 5 characters long"
                  },
                  Email: "Please enter a valid email address",
                  FirstName: "Please provide a first name",
                  LastName: "Please provide a last name"
              },
              submitHandler: function (form) {
                  form.submit();
              }

          });

        });

    </script>
}
