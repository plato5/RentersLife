@model RentersLife.ViewModels.RegistrationViewModel;

<div class="div-center">
    <div class="content">
        <h3>Register</h3>
        <hr />
        <form asp-action="Register">
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input class="form-control" type="text" placeholder="Email" asp-for="Email">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input class="form-control" type="text" placeholder="Password" asp-for="Password">
            </div>
             <div class="form-group">
                <label asp-for="FirstName">First Name:</label>
                <input class="form-control" type="text" placeholder="First Name" asp-for="FirstName">
            </div>
            <div class="form-group">
                <label asp-for="MiddleName">Middle Name:</label>
                <input class="form-control" type="text" placeholder="Middle Name" asp-for="MiddleName">
            </div>
             <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <input class="form-control" type="text" placeholder="Last Name" asp-for="LastName">
            </div>
            <input type="submit" class="btn btn-dark" value="Register">
        </form>
    </div>
</div>